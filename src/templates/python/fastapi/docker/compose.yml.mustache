version: "3.9"

services:
  app:
    image: {{project_name}}_app:latest
    container_name: {{project_name}}_app
    build:
      context: ..
      dockerfile: docker/Dockerfile
    ports:
      - "{{port}}:{{port}}"
    env_file:
      - .env
    environment:
      - PYTHONUNBUFFERED=1
      - PYTHONDONTWRITEBYTECODE=1
    depends_on:
      {{#include_db}}
      - db
      {{/include_db}}
      {{#include_cache}}
      - redis
      {{/include_cache}}
    networks:
      - default

  nginx:
    image: nginx:latest
    container_name: {{project_name}}_nginx
    ports:
      - "80:80"
    volumes:
      - ./nginx.conf:/etc/nginx/conf.d/default.conf
    depends_on:
      - app
    networks:
      - default

  {{#include_db}}
  db:
    image: {{db_image}}
    container_name: {{project_name}}_db
    ports:
      - "{{db_port}}:{{db_port}}"
    environment:
      {{#db_env_vars}}
      - {{key}}={{value}}
      {{/db_env_vars}}
    volumes:
      - db_data:{{{db_volume_folder}}}
  {{/include_db}}

  {{#include_cache}}
  redis:
    image: redis:alpine
    container_name: {{project_name}}_redis
    ports:
      - "6379:6379"
    volumes:
      - redis_data:/data
  {{/include_cache}}

networks:
  default:

volumes:
  {{#include_db}}
  db_data:
  {{/include_db}}
  {{#include_cache}}
  redis_data:
  {{/include_cache}}
