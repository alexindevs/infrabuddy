{{=<% %>=}}
name: Build and Deploy (Java)

on:
  push:
    branches:
      - main

jobs:
  build-and-deploy:
    runs-on: ubuntu-latest

    steps:
      - name: ğŸ”„ Checkout code
        uses: actions/checkout@v3

      <%#is_maven%>
      - name: ğŸ§ª Set up Maven
        uses: actions/setup-java@v3
        with:
          distribution: temurin
          java-version: 17

      - name: ğŸ”¨ Build with Maven
        run: ./mvnw clean package -DskipTests
      <%/is_maven%>

      <%#is_gradle%>
      - name: ğŸ§ª Set up Gradle
        uses: actions/setup-java@v3
        with:
          distribution: temurin
          java-version: 17

      - name: ğŸ”¨ Build with Gradle
        run: ./gradlew build -x test
      <%/is_gradle%>

      <%#is_dockerized%>
      - name: âœï¸ Write .env file from secrets
        run: echo "${{ secrets.ENV_FILE }}" > .env

      - name: ğŸ³ Build Docker image
        run: docker compose -f docker/compose.yml build --build-arg TAG=latest

      - name: ğŸ” Login to Docker Hub
        uses: docker/login-action@v2
        with:
          username: ${{ secrets.DOCKER_USERNAME }}
          password: ${{ secrets.DOCKER_PASSWORD }}

      - name: ğŸš€ Push Docker image
        run: |
          IMAGE_NAME=${{ secrets.DOCKER_USERNAME }}/<% project_name %>
          IMAGE_NAME=$(echo $IMAGE_NAME | tr '[:upper:]' '[:lower:]')
          docker push ${IMAGE_NAME}:latest
      <%/is_dockerized%>

      <%#deploy_ssh%>
      - name: ğŸ§¬ Deploy via SSH
        uses: appleboy/ssh-action@v1.2.2
        with:
          host: ${{ secrets.DEPLOY_HOST }}
          username: ${{ secrets.DEPLOY_USER }}
          key: ${{ secrets.SSH_PRIVATE_KEY }}
          script: |
            cd ${{ secrets.DEPLOY_PATH }}
            <%#is_dockerized%>
            docker pull ${{ secrets.DOCKER_USERNAME }}/<% project_name %>:latest
            docker compose -f docker/compose.yml down
            docker compose -f docker/compose.yml up --build -d
            <%/is_dockerized%>
            <%^is_dockerized%>
            git pull
            git switch main
            <%#is_maven%>
            ./mvnw package -DskipTests
            <%/is_maven%>
            <%#is_gradle%>
            ./gradlew build -x test
            <%/is_gradle%>
            pm2 restart ${{ secrets.PM2_APP_NAME || 'app' }}
            <%/is_dockerized%>
      <%/deploy_ssh%>
