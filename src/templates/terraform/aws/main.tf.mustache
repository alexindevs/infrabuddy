terraform {
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = "~> 5.0"
    }
  }

  required_version = ">= 1.3.0"
}

provider "aws" {
  region = var.aws_region
}

{{#include_vpc}}module "vpc" {
  source = "./vpc"
}
{{/include_vpc}}

{{#include_ec2}}module "ec2" {
  source = "./ec2"
}
{{/include_ec2}}

{{#include_rds}}module "rds" {
  source = "./rds"
}
{{/include_rds}}

{{#include_s3}}module "s3" {
  source = "./s3"
}
{{/include_s3}}

{{#include_ecs}}module "ecs" {
  source = "./ecs"
}
{{/include_ecs}}

{{#include_eip}}module "eip" {
  source = "./eip"
}
{{/include_eip}}
